<%= render 'layouts/modal_dialog' do %>
  <div data-controller="modal form description" data-action="turbo:submit-end->modal#submitEnd">
    <h1 class="font-semibold text-xl p-5 border-b">
      <%= @action == 'add' ? 'Add Stock' : 'Remove Stock' %>
    </h1>

    <%= form_with(url: modify_quantity_item_path(@item, action_type: @action),
                  method: :post,
                  class: "p-5",
                  data: { turbo: true }) do |f| %>
      <div class="mb-4">
        <%= f.label :quantity, class: "block text-sm font-semibold" %>
        <%= f.number_field :quantity,
            min: 1,
            max: @action == 'remove' ? @item.quantity : nil,
            placeholder: 'Quantity',
            required: true,
            class: "mt-2 text-sm block w-full rounded-md border-gray-300 shadow-sm focus:border-#{@action == 'add' ? 'green' : 'red'}-500 focus:ring-#{@action == 'add' ? 'green' : 'red'}-500" %>
      </div>

      <div class="mb-4 text-sm">
        <a href="#" data-action="click->description#toggle" data-description-target="toggleLink" class="text-blue-500 hover:underline">
          Click to add description
        </a>
      </div>

      <div class="mb-4 hidden" data-description-target="notesField">
        <%= f.label :notes, class: "block text-sm font-semibold" %>
        <%= f.text_area :notes,
          placeholder: 'Add optional notes',
          class: "mt-2 text-sm block w-full rounded-md border-gray-300 shadow-sm focus:border-#{@action == 'add' ? 'green' : 'red'}-500 focus:ring-#{@action == 'add' ? 'green' : 'red'}-500" %>
      </div>

      <div class="flex justify-end gap-3">
        <%= f.submit "#{@action.titleize} Stock", class: "#{@action == 'add' ? 'w-full md:w-auto px-4 py-2 text-sm bg-green-500 text-white font-medium rounded-md hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800 cursor-pointer' : 'w-full md:w-auto px-4 py-2 text-sm bg-red-500 text-white font-medium rounded-md hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800 cursor-pointer'}" %>
      </div>
    <% end %>
  </div>
<% end %>
