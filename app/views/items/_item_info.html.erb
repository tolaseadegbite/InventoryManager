<% if low_stock?(item) %>
  <div class="flex p-4 mb-4 text-sm text-red-800 rounded-3xl bg-red-50 dark:bg-gray-800 dark:text-red-400 mt-5" role="alert">
    <svg class="flex-shrink-0 inline w-4 h-4 me-3 mt-[2px]" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
      <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
    </svg>
    <span class="sr-only">Danger</span>
    <div>
      <span class="font-medium">Low stock alert:</span>
        <ul class="mt-1.5 list-disc list-inside">
          <li><%= item.name %> has <%= pluralize(item.quantity, 'item') %> remaining</li>
          <li>Threshold: <%= item.stock_threshold %></li>
      </ul>
    </div>
  </div>
<% end %>

<div class="flex items-center flex-wrap gap-2 md:gap-5 mb-3">
  <div><span class="font-semibold">Category:</span> <%= item.category.present? ? link_to(item.category.name, category_path(item.category), class: "text-orange-500", data: { turbo_frame: "_top" }) : 'Not set' %></div>
  <span>•</span>
  <div><span class="font-semibold">Quantity:</span> <%= item.quantity %></div>
  <span>•</span>
  <div><span class="font-semibold">Stock Threshold:</span> <%= item.stock_threshold %></div>
  <span>•</span>
  <div><span class="font-semibold">Created by:</span> <span><%= item.account.profile.name || item.account.email %></span></div>
</div>

<p class=""><%= item.description %></p>
