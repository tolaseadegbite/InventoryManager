<div class="flex gap-4 md:w-auto p-2 border border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-green-500 dark:bg-gray-700 dark:text-gray-100 mx-auto shadow-md">
    <% if current_user.manager? %>
        <%= link_to quantity_modal_inventory_item_path(inventory, item, action_type: 'add'), data: { turbo_frame: :modal }, class: "flex items-center gap-2 bg-green-100 text-green-600 hover:bg-green-200 px-6 py-4 rounded-lg shadow-sm transition-all" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
        </svg>
        <% end %>
    <% end %>
    <%= link_to quantity_modal_inventory_item_path(inventory, item, action_type: 'remove'), data: { turbo_frame: :modal }, class: "flex items-center gap-2 bg-red-100 text-red-600 hover:bg-red-200 px-6 py-4 rounded-lg shadow-sm transition-all" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M5 12h14" />
        </svg>
    <% end %>
</div>