<% if current_user.manager? %>
    <%= form_with(url: modify_quantity_item_path(@item, action_type: 'add'),
                method: :post,
                class: "flex flex-col md:flex-row items-center gap-4 bg-white dark:bg-gray-800 p-4 rounded-3xl shadow-md border w-full md:w-auto",
                data: { turbo: true }) do |f| %>
        <%= f.number_field :quantity,
            min: 1,
            placeholder: 'Quantity',
            required: true,
            class: "w-full md:w-24 p-2 border border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-green-500 dark:bg-gray-700 dark:text-gray-100" %>
        <%= f.submit "Add Stock",
            class: "w-full md:w-auto px-4 py-2 text-sm bg-green-500 text-white font-medium rounded-md hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800 cursor-pointer" %>
    <% end %>
<% end %>

<%= form_with(url: modify_quantity_item_path(@item, action_type: 'remove'),
            method: :post,
            class: "flex flex-col md:flex-row items-center gap-4 bg-white dark:bg-gray-800 p-4 rounded-3xl shadow-md border w-full md:w-auto",
            data: { turbo: true }) do |f| %>
    <%= f.number_field :quantity,
        min: 1,
        max: @item.quantity,
        placeholder: 'Quantity',
        required: true,
        class: "w-full md:w-24 p-2 border border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-red-500 dark:bg-gray-700 dark:text-gray-100" %>
    <%= f.submit "Remove Stock",
        class: "w-full md:w-auto px-4 py-2 text-sm bg-red-500 text-white font-medium rounded-md hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800 cursor-pointer" %>
<% end %>