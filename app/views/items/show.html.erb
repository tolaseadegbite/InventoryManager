<% provide(:title, sanitize(@item.name)) %>

<div class="max-w-screen-lg mx-auto">

  <nav class="flex mb-5" aria-label="Breadcrumb">
    <ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse">
      <li class="inline-flex items-center">
        <%= link_to items_path, class: "inline-flex items-center text-sm font-medium text-orange-700 hover:text-orange-600 dark:text-orange-400 dark:hover:text-white" do %>
          <svg class="w-3 h-3 me-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
          <path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"/>
          </svg>
          Home
        <% end %>
      </li>

      <li aria-current="page">
        <div class="flex items-center">
          <svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
          </svg>
          <span class="ms-1 text-sm font-medium text-gray-500 md:ms-2 dark:text-gray-400"><%= @item.name %></span>
        </div>
      </li>
    </ol>
  </nav>

  <div id="show_header">
    <%= render 'items/components/show_header' %>
  </div>

  <div class="mt-6 max-w-screen-md mx-auto">
    <div class="flex flex-col md:flex-row gap-4">
      <% if current_account.Admin? %>
        <%= form_tag add_quantity_item_path(@item), method: :post, class: "flex flex-col md:flex-row items-center gap-4 bg-white dark:bg-gray-800 p-4 rounded-3xl shadow-md border w-full md:w-auto" do %>
          <%= number_field_tag :quantity, nil, min: 1, class: "w-full md:w-24 p-2 border border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-green-500 focus:border-green-500 dark:bg-gray-700 dark:text-gray-100", placeholder: "Qty", required: true %>
          <%= submit_tag "Add to Stock", class: "w-full md:w-auto px-4 py-2 text-sm bg-green-500 text-white font-medium rounded-md hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800 cursor-pointer" %>
        <% end %>
      <% end %>

      <%= form_tag remove_quantity_item_path(@item), method: :post, class: "flex flex-col md:flex-row items-center gap-4 bg-white dark:bg-gray-800 p-4 rounded-3xl shadow-md border w-full md:w-auto" do %>
        <%= number_field_tag :quantity, nil, min: 1, max: @item.quantity, class: "w-full md:w-24 p-2 border border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-red-500 dark:bg-gray-700 dark:text-gray-100", placeholder: "Qty", required: true %>
        <%= submit_tag "Remove from Stock", class: "w-full md:w-auto px-4 py-2 text-sm bg-red-500 text-white font-medium rounded-md hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800 cursor-pointer" %>
      <% end %>
    </div>
  </div>

  <div class="mt-10 max-w-screen-md mx-auto">
    <% if @inventory_actions.any? %>
      <h1 class="font-bold text-[1.1rem]">Inventory History<span class="bg-blue-100 text-blue-800 text-sm font-medium px-2.5 py-0.5 rounded dark:bg-blue-700 dark:text-blue-300 ms-2"><%= @inventory_actions.count %></span></h1>

      <div class="overflow-x-auto mt-2">
        <table class="w-full">
          <thead>
            <tr class="border-b">
              <th class="text-left p-2">Date</th>
              <th class="text-left p-2">Action</th>
              <th class="text-left p-2">Qty</th>
              <th class="text-left p-2">User</th>
            </tr>
          </thead>
          <tbody>
            <% @inventory_actions.each do |action| %>
              <tr class="border-b">
                <td class="p-2"><%= action.created_at.strftime("%Y-%m-%d %H:%M") %></td>
                <td class="p-2"><%= action.action_type.titleize %></td>
                <td class="p-2"><%= action.quantity %></td>
                <td class="p-2"><%= action.account.profile.name || action.account.email %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <h1 class="font-bold text-[1.1rem]">No inventory history</h1>
    <% end %>
  </div>

</div>