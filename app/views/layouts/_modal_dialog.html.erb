<%= turbo_frame_tag :modal do %>
    <dialog data-controller="modal" data-action="click->modal#clickOutside" class="rounded-3xl border w-full md:w-2/3 lg:w-1/3 mx-auto shadow-md">
        <div class="relative">
            <button class="bg-white absolute top-4 right-5 close-modal-btn" data-action="modal#close">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
                </svg>
            </button>
        </div>
        <%= yield %>
    </dialog>
<% end %>