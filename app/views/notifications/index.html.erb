<% provide(:title, "Notifications") %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-screen-lg mx-auto">
    <div class="bg-white rounded-lg shadow-md border">
      <div class="p-6">
        <div class="flex justify-between items-center mb-6">
          <h1 class="text-2xl font-bold">Notifications</h1>
          <% if @notifications.unread.any? %>
            <%= button_to 'Mark all as read',
                mark_all_read_notifications_path,
                method: :post,
                class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700" %>
          <% end %>
        </div>

        <div class="space-y-4">
          <% @notifications.newest_first.each do |notification| %>
            <div class="p-4 rounded-lg border <%= notification.read? ? 'bg-gray-50' : 'bg-white' %>">
              <div class="flex justify-between items-start">
                <div class="flex-1">
                  <p class="text-gray-800"><%= notification.message %></p>
                  <p class="text-sm text-gray-500 mt-1">
                    <%= time_ago_in_words(notification.created_at) %> ago
                  </p>
                </div>
                <% unless notification.read? %>
                  <%= button_to 'Mark as read',
                      mark_read_notification_path(notification),
                      method: :post,
                      class: "text-sm text-blue-600 hover:text-blue-800" %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>

        <% if @notifications.empty? %>
          <div class="text-center py-8">
            <p class="text-gray-500">No notifications yet</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>