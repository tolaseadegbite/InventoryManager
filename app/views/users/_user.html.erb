<%= turbo_frame_tag user do %>
  <ul class="border border-gray-200 bg-white p-5 rounded-lg shadow-sm mb-5 hover:shadow-md transition-all">
    <!-- Mobile View -->
    <div class="block md:hidden">
      <li class="flex justify-between items-center mb-3">
        <h2><span class="font-semibold text-gray-700">Name:</span></h2>
        <%= link_to highlight(user.profile.name, params.dig(:q, :profile_name_cont)), user, class: "text-gray-600 hover:text-gray-500 font-semibold", data: { turbo_frame: "_top" } %>
      </li>
      <li class="flex justify-between items-center mb-3">
        <h2><span class="font-semibold text-gray-700">Email:</span></h2>
        <span class="text-gray-600"><%= user.email %></span>
      </li>
      <li class="flex justify-between items-center mb-3">
        <h2><span class="font-semibold text-gray-700">Role:</span></h2>
        <span class="text-gray-600"><%= user.role %></span>
      </li>
      <li class="flex justify-between items-center mb-3">
        <h2><span class="font-semibold text-gray-700">Created on:</span></h2>
        <%= user.created_at.strftime("%Y-%m-%d %H:%M") %>
      </li>
    </div>

    <!-- Desktop View -->
    <div class="hidden md:flex justify-between items-center">
      <li class="w-1/4 font-semibold text-gray-800 truncate">
        <%= link_to highlight(user.profile.name, params.dig(:q, :profile_name_cont)), user, class: "text-gray-600 hover:text-gray-500 font-semibold", data: { turbo_frame: "_top" } %>
      </li>
      <li class="w-1/4 text-center text-gray-600">
        <%= user.email %>
      </li>
      <li class="w-1/4 text-center text-gray-600">
        <%= user.role.capitalize %>
      </li>
      <li class="w-1/4 text-center truncate">
        <%= user.created_at.strftime("%Y-%m-%d %H:%M") %>
      </li>
    </div>
  </ul>
<% end %>
