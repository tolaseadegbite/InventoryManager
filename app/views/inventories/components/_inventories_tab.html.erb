<div class="mb-4 border-b border-gray-200 overflow-x-auto hide-scrollbar">
  <ul class="flex flex-nowrap -mb-px text-sm font-medium text-center text-gray-500 whitespace-nowrap min-w-full">
    <li class="mr-1">
      <%= link_to inventories_path(tab: 'owned'), 
          class: "inline-flex items-center justify-center p-2 border-b-2 rounded-t-lg #{@current_tab == 'owned' ? 'text-blue-600 border-blue-600 active' : 'border-transparent hover:text-gray-600 hover:border-gray-300'}" do %>
        <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
        </svg>
        <span class="whitespace-nowrap">My Inventories</span>
        <span class="ml-2 bg-gray-100 text-gray-900 text-xs font-medium px-2.5 py-0.5 rounded-full">
          <%= policy_scope(Inventory).owned_by(current_user).count %>
        </span>
      <% end %>
    </li>
    <li class="mr-2">
      <%= link_to inventories_path(tab: 'associated'), 
          class: "inline-flex items-center justify-center p-2 border-b-2 rounded-t-lg #{@current_tab == 'associated' ? 'text-blue-600 border-blue-600 active' : 'border-transparent hover:text-gray-600 hover:border-gray-300'}" do %>
        <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
        <span class="whitespace-nowrap">Shared With Me</span>
        <span class="ml-2 bg-gray-100 text-gray-900 text-xs font-medium px-2.5 py-0.5 rounded-full">
          <%= policy_scope(Inventory).associated_with(current_user).count %>
        </span>
      <% end %>
    </li>
  </ul>
</div>