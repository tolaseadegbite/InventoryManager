<div class="space-y-4">
  <%# Tabs Navigation %>
  <div class="border-b border-gray-200">
    <ul class="flex flex-wrap -mb-px text-sm font-medium text-center text-gray-500">
      <li class="mr-2">
        <%= link_to inventory_inventory_users_path(@inventory, tab: 'users'), 
            class: "inline-flex items-center justify-center p-4 border-b-2 rounded-t-lg #{@current_tab == 'users' ? 'text-blue-600 border-blue-600 active' : 'border-transparent hover:text-gray-600 hover:border-gray-300'}" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
          Inventory Users
          <span class="ml-2 bg-gray-100 text-gray-900 text-xs font-medium px-2.5 py-0.5 rounded-full">
            <%= @users.count %>
          </span>
        <% end %>
      </li>
      <li class="mr-2">
        <%= link_to inventory_inventory_users_path(@inventory, tab: 'invitations'), 
            class: "inline-flex items-center justify-center p-4 border-b-2 rounded-t-lg #{@current_tab == 'invitations' ? 'text-blue-600 border-blue-600 active' : 'border-transparent hover:text-gray-600 hover:border-gray-300'}" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
          </svg>
          Pending Invitations
          <span class="ml-2 bg-gray-100 text-gray-900 text-xs font-medium px-2.5 py-0.5 rounded-full">
            <%= @pending_invitations.count %>
          </span>
        <% end %>
      </li>
    </ul>
  </div>

  <%# Users Tab Content %>
  <% if @current_tab == 'users' %>
    <div class="bg-white rounded-lg shadow">
      <div class="">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">User</th>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Role</th>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Categories</th>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Joined</th>
                <th class="px-6 py-3 text-right text-xs font-semibold text-gray-500 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% if @users.present? %>
                <%= render partial: 'inventory_user', collection: @users %>
              <% end %>
            </tbody>
          </table>
          <% if !@users.present? %>
            <p class="text-sm italic text-gray-600 mt-4">No users in this inventory</p>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <%# Invitations Tab Content %>
  <% if @current_tab == 'invitations' %>
    <div class="bg-white rounded-lg shadow">
      <div class="">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">User</th>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Role</th>
                <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Joined</th>
                <th class="px-6 py-3 text-right text-xs font-semibold text-gray-500 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% if @pending_invitations.present? %>
                <%= render partial: 'inventory_invitations/invitation', collection: @pending_invitations %>
              <% end %>
            </tbody>
          </table>
          <% if !@pending_invitations.present? %>
            <p class="text-sm italic text-gray-600 mt-4">No users in this inventory</p>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>