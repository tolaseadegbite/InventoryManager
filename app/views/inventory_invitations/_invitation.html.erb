<%= turbo_frame_tag invitation do %>
    <tr>
        <td class="px-6 py-4 whitespace-nowrap">
            <div class="flex items-center">
            <div class="h-10 w-10 flex-shrink-0">
                <% if invitation.recipient.profile.avatar.attached? %>
                    <%= image_tag(invitation.recipient.profile.avatar, class: "w-10 h-10 border-2 border-white rounded-full dark:border-gray-800", alt: "inventory user avatar") %>
                <% else %>
                    <%= image_tag('others/default avatar.png', class: "w-8 h-8 object-cover rounded-full border-gray-800", alt: "inventory user avatar") %>
                <% end %>
            </div>
            <div class="ml-4">
                <div class="text-sm font-medium text-gray-900">
                <%= invitation.recipient.profile.name %>
                </div>
                <div class="text-sm text-gray-500">
                <%= invitation.recipient.email_address %>
                </div>
            </div>
            </div>
        </td>
        <td class="px-6 py-4 whitespace-nowrap">
            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
            <%= invitation.role.titleize %>
            </span>
        </td>
        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <%= time_ago_in_words(invitation.created_at) %> ago
        </td>
        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
            <%#= button_to "Cancel", inventory_inventory_invitation_path(@inventory, invitation), method: :delete, class: "text-red-600 hover:text-red-900 mr-4", data: { turbo_confirm: "Are you sure you want to cancel this invitation?", turbo_method: :delete } %>
            <%= link_to confirm_delete_inventory_inventory_invitation_path(@inventory, invitation), data: { turbo_frame: :modal }, class: "inline-flex text-gray-900 bg-white border border-gray-900 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-lg text-sm px-2 py-2 me-2 mb-2 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600 dark:focus:ring-gray-700" do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                </svg>
            <% end %>
            <%#= button_to "Resend", resend_inventory_inventory_invitation_path(@inventory, invitation), method: :post, class: "text-blue-600 hover:text-blue-900" %>
        </td>
    </tr>
<% end %>