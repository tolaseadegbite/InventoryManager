<div class="p-5">
    <%= form_with(model: [inventory, category], class: "w-full") do |form| %>
        <%= render 'shared/errors', form: form %>
        
        <div class="mb-6">
            <%= form.label :name, class: "block text-sm font-semibold" %>
            <%= form.text_field :name, placeholder: "Name", class: "mt-2 w-full px-3 p-2.5 border rounded-md dark:bg-gray-900 dark:text-gray-100 dark:focus:bg-gray-800 border-gray-300 dark:border-gray-700 dark:focus:border-emerald-400 dark:focus:ring-emerald-400 text-sm", required: true %>
        </div>

        <div class="mb-6">
            <%= form.label :description, class: "block text-sm font-semibold" %>
            <%= form.text_area :description, placeholder: "Description", class: "h-24 mt-2 w-full px-3 p-2.5 border rounded-md dark:bg-gray-900 dark:text-gray-100 dark:focus:bg-gray-800 border-gray-300 dark:border-gray-700 dark:focus:border-emerald-400 dark:focus:ring-emerald-400 text-sm" %>
        </div>

        <%= form.submit "Save", class: "w-full md:w-auto mt-2 bg-blue-500 hover:bg-blue-700 text-white py-2 px-4 rounded cursor-pointer" %>
    <% end %>
</div>