<div class="p-5">
    <%= form_with(model: [inventory, category], class: "w-full") do |form| %>
        <%= render 'shared/errors', form: form %>
        
        <div class="mb-6">
            <%#= form.label :name, class: "block text-sm font-semibold" %>
            <%= form.text_field :name, placeholder: "Name", class: "mt-2 w-full px-3 p-2.5 border rounded-md dark:bg-gray-900 dark:text-gray-100 dark:focus:bg-gray-800 border-gray-300 dark:border-gray-700 dark:focus:border-emerald-400 dark:focus:ring-emerald-400", required: true %>
        </div>

        <div class="mb-6">
            <%#= form.label :description, class: "block text-sm font-semibold" %>
            <%= form.text_area :description, placeholder: "Description", class: "h-24 mt-2 w-full px-3 p-2.5 border rounded-md dark:bg-gray-900 dark:text-gray-100 dark:focus:bg-gray-800 border-gray-300 dark:border-gray-700 dark:focus:border-emerald-400 dark:focus:ring-emerald-400" %>
        </div>

        <%= form.submit "Save", class: "w-full cursor-pointer text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
    <% end %>
</div>