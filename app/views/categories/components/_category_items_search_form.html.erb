<div class="search-form flex gap-1 items-center">
    <%= search_form_for @q, url: category_path(@category), data: { turbo_frame: :results, turbo_action: 'advance', controller: "debounce", action: "input->debounce#submit" } do |f| %>
        <label for="default-search" class="mb-2 text-sm font-medium text-gray-900 sr-only dark:text-white">Search</label>
        <div class="relative">
            <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
                </svg>
            </div>
            <%= f.search_field :name_cont, class: "block w-full px-3 p-2.5 ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: "Search by name" %>
        </div>
    <% end %>

    <button id="dropdownMenuSearchButton" type="button" data-dropdown-toggle="dropdownSearch" data-dropdown-placement="bottom" class="text-white end-2.5 bottom-0.5 hover:bg-gray-200 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-full text-sm p-2 dark:bg-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-800 cursor-pointer">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5 text-gray-800">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 6h9.75M10.5 6a1.5 1.5 0 1 1-3 0m3 0a1.5 1.5 0 1 0-3 0M3.75 6H7.5m3 12h9.75m-9.75 0a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m-3.75 0H7.5m9-6h3.75m-3.75 0a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m-9.75 0h9.75" />
        </svg>
    </button>

    <!-- Dropdown menu -->
    <div id="dropdownSearch" class="absolute w-96 border z-50 hidden bg-white divide-y divide-gray-100 rounded-3xl shadow dark:bg-gray-700 dark:divide-gray-600 p-4">
        <%= search_form_for @q, url: category_path(@category), data: { turbo_frame: :results, turbo_action: 'advance', controller: "debounce clear-form", "clear_form_target": "form", action: "input->debounce#submit" }, class: "search-form" do |form| %>
            <div class="mb-6">
                <%= form.label :name, class: "block text-sm font-semibold" %>
                <%= form.search_field :name_cont, placeholder: "Search by name", class: "mt-2 text-sm w-full px-3 p-2.5 border rounded-md dark:bg-gray-900 dark:text-gray-100 dark:focus:bg-gray-800 border-gray-300 dark:border-gray-700 dark:focus:border-emerald-400 dark:focus:ring-emerald-400" %>
            </div>
            <div class="mb-6">
                <%= form.label :low_stock?, class: "block text-sm font-semibold" %>
                <%= form.select :low_stock_eq, [true, false], { include_blank: "Select low stock items" }, class: "mt-2 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-gray-500 focus:border-gray-500 block w-full p-2.5 cursor-pointer" %>
            </div>
            <div class="mb-6 text-sm">
                <%= link_to "Clear Form", "#", data: { action: "clear-form#clear" }, class: "text-red-500 underline" %>
            </div>

            <%#= form.submit "Search", class: "w-full cursor-pointer text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
        <% end %>
    </div>
</div>