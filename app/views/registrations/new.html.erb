<div class="flex-grow flex flex-col items-center justify-center relative mx-5">
  <div class="mb-8 text-center md:w-1/3">
    <%= link_to image_tag("https://afsopress.com/wp-content/uploads/2023/05/cropped-afsopresslogonew.png", class: "w-1/2 mx-auto mb-5"), root_path %>
    <h1 class="text-4xl text-black font-semibold">Sign up to AFSO Inventory</h1>
  </div>

  <div class="wrapper w-full mx-5 md:w-1/3 md:mx-0 bg-white">
    <div class="flex-1 space-y-4">

      <%= form_with url: registrations_url, model: @user, method: :post, class: "contents" do |form| %>
        <%= form.fields_for :profile do |profile_form| %>
            <div class="my-5">
            <%= profile_form.text_field :name, required: true, autofocus: true, 
                autocomplete: "name", placeholder: "Enter your name", 
                class: "mt-2 text-sm w-full px-3 p-2.5 border rounded-md dark:bg-gray-900 dark:text-gray-100 dark:focus:bg-gray-800 border-gray-300 dark:border-gray-700 dark:focus:border-emerald-400 dark:focus:ring-emerald-400" %>
            </div>
        <% end %>

        <div class="my-5">
            <%= form.email_field :email_address, required: true, autocomplete: "email", 
                placeholder: "Enter your email address", value: params[:email_address], 
                class: "mt-2 text-sm w-full px-3 p-2.5 border rounded-md dark:bg-gray-900 dark:text-gray-100 dark:focus:bg-gray-800 border-gray-300 dark:border-gray-700 dark:focus:border-emerald-400 dark:focus:ring-emerald-400" %>
        </div>

        <div class="my-5">
          <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Enter your password", maxlength: 72, class: "mt-2 text-sm w-full px-3 p-2.5 border rounded-md dark:bg-gray-900 dark:text-gray-100 dark:focus:bg-gray-800 border-gray-300 dark:border-gray-700 dark:focus:border-emerald-400 dark:focus:ring-emerald-400" %>
        </div>

        <div class="my-5">
         <%= form.password_field :password_confirmation, required: true, autocomplete: "current-password", placeholder: "Password confirmation", maxlength: 72, class: "mt-2 text-sm w-full px-3 p-2.5 border rounded-md dark:bg-gray-900 dark:text-gray-100 dark:focus:bg-gray-800 border-gray-300 dark:border-gray-700 dark:focus:border-emerald-400 dark:focus:ring-emerald-400" %>
        </div>

        <div class="mt-4 text-sm text-gray-500 sm:mt-0 text-right">
          <%= link_to "Forgot password?", new_password_path, class: "text-gray-700 underline hover:no-underline" %>
        </div>

        <div class="my-5">
          <%= form.submit "Sign up", class: "w-full px-8 py-3 cursor-pointer font-semibold text-sm rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-600 dark:bg-emerald-400 dark:hover:bg-emerald-500 dark:text-gray-900 dark:focus:ring-emerald-400 dark:focus:ring-offset-current" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
